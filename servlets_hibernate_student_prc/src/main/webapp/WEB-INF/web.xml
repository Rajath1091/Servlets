<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <context-param>
  	<param-name>school</param-name>
  	<param-value>SVVS</param-value>
  </context-param>
  
  <servlet>
  <servlet-name>Signup</servlet-name>
  <servlet-class>servlets_hibernate_student_prc.controller.StudentController</servlet-class>
  	<init-param>
  		<param-name>fees</param-name>
  		<param-value>30000</param-value>
  	</init-param>
  </servlet>
  <servlet-mapping>
  <servlet-name>Signup</servlet-name>
  <url-pattern>/signup</url-pattern>
  </servlet-mapping>
  
  <servlet>
  <servlet-name>Login</servlet-name>
  <servlet-class>servlets_hibernate_student_prc.controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>Login</servlet-name>
  <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
</web-app>
